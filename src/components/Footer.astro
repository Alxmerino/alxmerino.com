---
import AstroLogo from "./icons/astro-logo.astro";
import Github from '../components/icons/github.astro';
import Linkedin from '../components/icons/linkedin.astro';
import Twitter from '../components/icons/twitter.astro';

const today = new Date();
---

<footer class="border-t border-gray-800 pt-8">
  <p class="text-center text-gray-500 mb-4">
    Copyright {today.getFullYear()} &copy; Rene Merino
  </p>
  <div class="flex justify-center space-x-4">
    <a href="https://github.com/Alxmerino" target="_blank" class="text-gray-400 hover:text-white">
			<Github class="w-5 fill-gray-400" />
    </a>
    <a target="_blank" href="https://www.linkedin.com/in/rene-merino/" class="text-gray-400 hover:text-white">
			<Linkedin class="w-5 fill-gray-400" />
    </a>
    <a  target="_blank" href="https://twitter.com/renemerino" class="text-gray-400 hover:text-white">
			<Twitter class="w-5 fill-gray-400" />
    </a>
  </div>
</footer>