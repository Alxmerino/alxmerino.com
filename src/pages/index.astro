---
import { Image } from '@astrojs/image/components';
import Github from '../components/icons/github.astro';
import Linkedin from '../components/icons/linkedin.astro';
import Twitter from '../components/icons/twitter.astro';

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<main class="px-6 md:px-0 flex flex-1 justify-center items-center">
		<div class="flex items-center space-x-6">
			<div class="w-40">
				<Image src="/img/rene-merino.jpeg" alt="René Merino" width={575} height={575} class="rounded-full" />
			</div>
			<div>
				<h1 class="text-2xl md:text-5xl font-serif mb-2">Hi! I'm René Merino</h1>
				<p>Senior Full-Stack Software Engineer at <a  target="_blank" href="https://happycog.com" class="hover:underline">Happy Cog</a>.</p>

				<ul class="flex space-x-4 -indent-96 overflow-hidden">
					<li>
						<a  target="_blank" href="https://github.com/Alxmerino">
							GitHub
							<Github class="w-5" />
						</a>
					</li>
					<li>
						<a  target="_blank" href="https://twitter.com/renemerino">
							Twitter
							<Twitter class="w-5" />
						</a>
					</li>
					<li>
						<a  target="_blank" href="https://www.linkedin.com/in/rene-merino/">
							LinkedIn
							<Linkedin class="w-5" />
						</a>
					</li>
				</ul>
			</div>
		</div>
	</main>
</BaseLayout>