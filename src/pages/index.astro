---
import BaseLayout from '../layouts/BaseLayout.astro';
import Aws from '../components/icons/aws.astro';
import Electron from '../components/icons/electron.astro';
import Github from '../components/icons/github.astro';
import Laravel from '../components/icons/laravel.astro';
import Pulumi from '../components/icons/pulumi.astro';
import React from '../components/icons/react.astro';
import Typescript from '../components/icons/typescript.astro';

const projects = [
  {
    name: 'Project Timer',
    description: 'A simple yet effective React App for tracking time across multiple projects. Saturn includes an API for syncing time entries across platforms as well as integrations like JIRA Server. This was born as an upgrade from my previous Project Timer time tracking app',
    color: 'border-blue-400',
    link: 'https://github.com/Alxmerino/saturn-app-react'
  },
  {
    name: 'Project Timer',
    description: 'When I first started tracking time for my projects I was overwhelme by the existing time tracking apps. Some were overly complicated others just weren\'t enought. I created Project Timer to have a simple to use time tracking tool with features exactly as I needed them.',
    color: 'border-blue-400',
    link: 'https://alxmerino.github.io/Project-Timer'
  },
];

const skills = [
  "JavaScript", "TypeScript", "PHP", "NextJS", "React", "Vue", 
  "Rest APIs", "GraphQL", "Algolia", "CraftCMS", "WordPress", "Laravel", "Web Accessibility/WCAG"
];

---

<BaseLayout>
	<section class="mb-16 flex flex-col md:flex-row items-center md:items-stretch gap-8">
        <div class="w-48 h-48 rounded-full overflow-hidden flex-shrink-0">
          <img src="https://alxmerino.com/assets/rene-merino_Z23R1Oq.jpeg" alt="René Merino" class="w-full h-full object-cover" />
        </div>
        <div class="flex flex-col justify-center">
          <h1 class="text-4xl font-bold text-white mb-4">
            I'm René, Senior Full-Stack software engineer and problem solver.
          </h1>
          <p class="text-xl text-gray-400">
            I specialize in crafting robust and scalable web applications.
          </p>
        </div>
      </section>

      <section id="about" class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-6">About Me</h2>
        <p class="text-gray-400 mb-6">
          With over a decade of experience in software engineering, I've honed my skills in crafting efficient, 
          scalable, and user-friendly web applications. My expertise spans across front-end and back-end technologies, 
          allowing me to deliver comprehensive solutions for complex problems.
        </p>
        <h3 class="text-2xl font-semibold text-white mb-4">Core Skills</h3>
        <div class="flex flex-wrap gap-2">
          {skills.map((skill) => (
            <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-sm">{skill}</span>
          ))}
        </div>
      </section>

			<section id="projects" class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-6">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <div class={`bg-gray-800 p-6 rounded-lg border-l-4 ${project.color}`}>
              <h3 class="text-2xl font-semibold text-white mb-2">{project.name}</h3>
              <p class="text-gray-400 mb-4">{project.description}</p>
              <a href={project.link} class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition-colors">
                Learn More
              </a>
            </div>
          ))}
        </div>
      </section>

      <section id="contact" class="mb-16">
        <h2 class="text-2xl font-bold text-white mb-6">What are you working on?</h2>
        <p class="text-gray-400 mb-6">
          Let's have a conversation! I'd love to hear about what you're working on and find a way to work together.
        </p>
        <a href="mailto:rene@amayamedia.com?subject=Let's Get in touch" class="bg-blue-500 text-white px-6 py-3 rounded-full hover:bg-blue-600 transition-colors">
          <!-- <Icon name="mdi:chat" class="w-5 h-5 inline-block mr-2" /> -->
          Chat
        </a>
      </section>
</BaseLayout>