---
import { Image } from '@astrojs/image/components';
import Aws from '../components/icons/aws.astro';
import Laravel from '../components/icons/laravel.astro';
import Pulumi from '../components/icons/pulumi.astro';
import React from '../components/icons/react.astro';
import Typescript from '../components/icons/typescript.astro';

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<main class="px-6 md:px-0 flex flex-col flex-1 max-w-xl m-auto">
        <h1 class="text-5xl mb-4">Projects</h1>
        
        <hr class="mb-10" />
        
        <article>
            <Image src="/img/saturn-time-tracking.png" alt="Get Saturn Time Tracking App" width={575} height={250} class="rounded-lg mb-6" />
			<h2 class="text-4xl mb-3">
                <a href="https://getsaturnapp.com" target="_blank">Saturn Time Tracker App</a>
            </h2>
			<p>A simple yet effective React app for tracking time across multiple projects. Saturn includes an API for syncing time entries across platforms as well as integrations like JIRA Server</p>

            <h4 class="text-xl mt-5 mb-2">Tech Stack</h4>
            <ul class="flex space-x-3 items-center">
                <li><a  target="_blank" href="http://www.typescriptlang.org/"><Typescript class="h-5" /><span class="sr-only">TypeScript</span></a></li>
                <li><a  target="_blank" href="https://reactjs.org/"><React class="h-5" /><span class="sr-only">React</span></a></li>
                <li><a  target="_blank" href="http://laravel.com/"><Laravel class="h-5" /><span class="sr-only">Laravel</span></a></li>
                <li><a  target="_blank" href="https://www.pulumi.com/"><Pulumi class="h-5" /><span class="sr-only">Pulumi</span></a></li>
                <li><a  target="_blank" href="https://aws.amazon.com/"><Aws class="w-7" /><span class="sr-only">AWS</span></a></li>
            </ul>
		</article>
		
	</main>
</BaseLayout>